# RAG System Environment Configuration

# Application Settings
DEBUG=false
APP_NAME="RAG System"
APP_VERSION="0.1.0"

# Database Configuration
DATABASE_URL="sqlite:///./rag_system.db"
# For PostgreSQL: DATABASE_URL="postgresql://user:password@localhost/rag_db"

# Vector Store Configuration
VECTOR_STORE_TYPE="faiss"
FAISS_INDEX_PATH="./data/embeddings/faiss_index"

# Embedding Model Configuration
EMBEDDING_MODEL="sentence-transformers/all-MiniLM-L6-v2"
EMBEDDING_DIMENSION=384

# Chunking Configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=100

# Retrieval Configuration
TOP_K=5
SIMILARITY_THRESHOLD=0.7

# LLM Provider Configuration
LLM_PROVIDER="gemini"
LLM_MODEL="gemini-1.5-flash"

# OpenAI Configuration
OPENAI_API_KEY="your_openai_api_key_here"

# Anthropic Configuration
ANTHROPIC_API_KEY="your_anthropic_api_key_here"

# Ollama Configuration
OLLAMA_BASE_URL="http://localhost:11434"

# Gemini Configuration
GEMINI_API_KEY="your_gemini_api_key_here"
GEMINI_MODEL="gemini-1.5-flash"

# Security
SECRET_KEY="your-secret-key-change-this-in-production"

# Storage Paths
UPLOAD_DIR="./data/documents"
CHUNK_DIR="./data/chunks"

# OCR Configuration
ENABLE_OCR=true
TESSERACT_PATH=""  # Leave empty for auto-detection

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8001

# Optional: Pinecone Configuration (for production)
# PINECONE_API_KEY="your_pinecone_api_key"
# PINECONE_ENVIRONMENT="your_environment"
